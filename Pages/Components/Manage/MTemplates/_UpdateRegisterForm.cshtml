
<div class="form-container update" id="form-background-blurred">
    <div class="generic-form-tag">
        <h3>Update Register</h3>
        <form id="form" method="post">
            @foreach (string field in @Model.Fields) 
            {   
                <label for="cod_@field">@field</label>
                <input type="text" id="cod_@field" name="@field-input" />
            }

            <button type="submit" class="create-btn">Update</button>
        </form>
    </div>
</div>
